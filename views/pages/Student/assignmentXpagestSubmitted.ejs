<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/_head') %>

  <body>
    <div class="wrapper">
      <%- include('../../partials/_stside-nav') %>

      <!-- Page Content  -->
      <div id="content">
          <div>
            <%- include('../../partials/_top-nav') %>
                <%# assign.CourseNum  %> 
                <h2 class="assignName"><%= assign.assignments[0].assignmentName %></h2>
                <a href="/assignmentsPageST"><i class="fas fa-undo-alt"></i> All Assignments</a>
                <p>Grade: <%= submit.grade %> </p>
                <p>Instructor Feedback: <%= submit.feedback %> </p>
                <form action="">
                    <div id="qaForm" class="<%= assign.assignments[0].assignmentId%> ">
                        <% for(let i = 0; i < assign.assignments[0].questions.length; i++){ %>
                            <div class="line"></div>
                            <h5>Question <%= [i+1] %></h5>
                            <h4><%= submit.answerFeedback[i] %> </h4>
                            <div>Q: <%= assign.assignments[0].questions[i] %></div>
                            <input readonly type="text" name="answer" class="form-control answer" placeholder="Your Answer" value="<%= submit.answers[i] %> ">
                        <% }; %> 
                    </div>
                    <div class="line"></div>
                </form>
            </div>

            <%- include('../../partials/_footer') %>
      </div>

    </div>
    <%- include('../../partials/_scripts') %>
    
  </body>
</html>